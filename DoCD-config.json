{
  "BasePackageManager": "choco",
  "Services": [
    {
      "Type": "python",
      "Path": "flask",
      "PackageManager": "pip",
      "LogFile": "./logs/flask-service.log",
      "InstallationCommands": [
        {
          "Directory": "\\venv\\Scripts",
          "Command": "cmd.exe /C activate.bat"
        },
        {
          "Directory": "\\flask",
          "Command": "pip install -e ."
        }
      ],
      "BuildCommands": [
        {
          "Directory": "\\flask",
          "Command": "flask run",
          "Environment": ["FLASK_APP=hello.py"]
        }
      ]
    },
    {
      "Type": "node",
      "Path": "client",
      "PackageManager": "npm",
      "LogFile": "./logs/react-service.log",
      "InstallationCommands": [
        {
          "Directory": "\\client",
          "Command": "npm install"
        }
      ],
      "BuildCommands": [
        {
          "Directory": "\\client",
          "Command": "npm run start"
        }
      ]
    }
  ]
}
